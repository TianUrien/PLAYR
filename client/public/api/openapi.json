{
  "openapi": "3.1.0",
  "info": {
    "title": "PLAYR Public Opportunities API",
    "description": "A public, read-only API for discovering field hockey opportunities on PLAYR. This API is designed for AI agents, job aggregators, and external integrations to surface PLAYR opportunities to their users.\n\n## Rate Limits\n- 60 requests per minute per IP\n- 500 requests per hour per IP\n- Responses are cached for 5 minutes\n\n## Data Boundary\nThis API only exposes public vacancy data. Private information (player profiles, applications, messages, contact details) is never exposed.",
    "version": "1.0.0",
    "contact": {
      "name": "PLAYR",
      "url": "https://oplayr.com",
      "email": "team@oplayr.com"
    },
    "license": {
      "name": "Proprietary",
      "url": "https://oplayr.com/terms"
    }
  },
  "servers": [
    {
      "url": "https://xtertgftujnebubxgqit.supabase.co/functions/v1",
      "description": "Production API"
    }
  ],
  "paths": {
    "/public-opportunities": {
      "get": {
        "operationId": "listOpportunities",
        "summary": "List all open opportunities",
        "description": "Returns a paginated list of all open field hockey opportunities. Results can be filtered by position, gender, country, and more.",
        "tags": ["Opportunities"],
        "parameters": [
          {
            "name": "position",
            "in": "query",
            "description": "Filter by player position",
            "schema": {
              "type": "string",
              "enum": ["goalkeeper", "defender", "midfielder", "forward"]
            }
          },
          {
            "name": "gender",
            "in": "query",
            "description": "Filter by team gender",
            "schema": {
              "type": "string",
              "enum": ["Men", "Women"]
            }
          },
          {
            "name": "country",
            "in": "query",
            "description": "Filter by country name (case-insensitive)",
            "schema": {
              "type": "string"
            },
            "example": "Netherlands"
          },
          {
            "name": "opportunity_type",
            "in": "query",
            "description": "Filter by opportunity type",
            "schema": {
              "type": "string",
              "enum": ["player", "coach"]
            }
          },
          {
            "name": "priority",
            "in": "query",
            "description": "Filter by urgency level",
            "schema": {
              "type": "string",
              "enum": ["high", "medium", "low"]
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of results to return (1-100)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Number of results to skip for pagination",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of opportunities",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OpportunitiesListResponse"
                },
                "example": {
                  "data": [
                    {
                      "id": "123e4567-e89b-12d3-a456-426614174000",
                      "title": "Goalkeeper - Women's First Team",
                      "opportunity_type": "player",
                      "position": "goalkeeper",
                      "gender": "Women",
                      "description": "We are looking for an experienced goalkeeper to join our first team for the upcoming season.",
                      "location": {
                        "city": "Zürich",
                        "country": "Switzerland"
                      },
                      "start_date": "2025-08-01",
                      "duration": "1 season",
                      "application_deadline": "2025-03-20",
                      "priority": "high",
                      "requirements": ["5+ years experience", "International level preferred"],
                      "benefits": ["housing", "visa", "flights"],
                      "club": {
                        "name": "HC Zürich",
                        "logo_url": "https://example.com/logo.png",
                        "location": "Zürich, Switzerland",
                        "league": "National League A"
                      },
                      "published_at": "2025-12-01T10:00:00Z",
                      "created_at": "2025-12-01T09:30:00Z",
                      "apply_url": "https://oplayr.com/opportunities/123e4567-e89b-12d3-a456-426614174000"
                    }
                  ],
                  "meta": {
                    "total": 47,
                    "limit": 20,
                    "offset": 0,
                    "has_more": true
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RateLimitError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/public-opportunities/{id}": {
      "get": {
        "operationId": "getOpportunity",
        "summary": "Get a single opportunity",
        "description": "Returns detailed information about a specific opportunity by its ID.",
        "tags": ["Opportunities"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique opportunity ID (UUID format)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The opportunity details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OpportunityDetailResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid opportunity ID format",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Opportunity not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RateLimitError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Opportunity": {
        "type": "object",
        "required": ["id", "title", "opportunity_type", "location", "club", "created_at", "apply_url"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique opportunity identifier"
          },
          "title": {
            "type": "string",
            "description": "The opportunity title"
          },
          "opportunity_type": {
            "type": "string",
            "enum": ["player", "coach"],
            "description": "Whether this is a player or coach position"
          },
          "position": {
            "type": "string",
            "enum": ["goalkeeper", "defender", "midfielder", "forward"],
            "nullable": true,
            "description": "The playing position (for player opportunities)"
          },
          "gender": {
            "type": "string",
            "enum": ["Men", "Women"],
            "nullable": true,
            "description": "The team gender"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "Detailed description of the opportunity"
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "When the position starts"
          },
          "duration": {
            "type": "string",
            "nullable": true,
            "description": "Expected duration (e.g., '1 season', '2 years')"
          },
          "application_deadline": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Deadline to apply"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "nullable": true,
            "description": "Urgency level of the opportunity"
          },
          "requirements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of requirements for applicants"
          },
          "benefits": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of benefits offered (e.g., housing, visa, flights)"
          },
          "club": {
            "$ref": "#/components/schemas/Club"
          },
          "published_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "When the opportunity was published"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "When the opportunity was created"
          },
          "apply_url": {
            "type": "string",
            "format": "uri",
            "description": "Direct link to view and apply on PLAYR"
          }
        }
      },
      "Location": {
        "type": "object",
        "required": ["city", "country"],
        "properties": {
          "city": {
            "type": "string",
            "description": "City name"
          },
          "country": {
            "type": "string",
            "description": "Country name"
          }
        }
      },
      "Club": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Club name"
          },
          "logo_url": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "URL to the club's logo"
          },
          "location": {
            "type": "string",
            "nullable": true,
            "description": "Club's base location"
          },
          "league": {
            "type": "string",
            "nullable": true,
            "description": "League or division the club plays in"
          }
        }
      },
      "OpportunitiesListResponse": {
        "type": "object",
        "required": ["data", "meta"],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Opportunity"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMeta"
          }
        }
      },
      "OpportunityDetailResponse": {
        "type": "object",
        "required": ["data"],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/Opportunity"
          }
        }
      },
      "PaginationMeta": {
        "type": "object",
        "required": ["total", "limit", "offset", "has_more"],
        "properties": {
          "total": {
            "type": "integer",
            "description": "Total number of matching opportunities"
          },
          "limit": {
            "type": "integer",
            "description": "Number of results per page"
          },
          "offset": {
            "type": "integer",
            "description": "Current offset"
          },
          "has_more": {
            "type": "boolean",
            "description": "Whether there are more results available"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["code", "message"],
            "properties": {
              "code": {
                "type": "string",
                "description": "Error code"
              },
              "message": {
                "type": "string",
                "description": "Human-readable error message"
              },
              "details": {
                "type": "string",
                "description": "Additional error details"
              }
            }
          }
        }
      },
      "RateLimitError": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "object",
            "required": ["code", "message", "retry_after"],
            "properties": {
              "code": {
                "type": "string",
                "const": "RATE_LIMIT_EXCEEDED"
              },
              "message": {
                "type": "string"
              },
              "retry_after": {
                "type": "integer",
                "description": "Seconds until the rate limit resets"
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Opportunities",
      "description": "Field hockey opportunities for players and coaches"
    }
  ]
}
